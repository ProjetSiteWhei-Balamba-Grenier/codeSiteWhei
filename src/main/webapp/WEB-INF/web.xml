<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>Accueil</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>fr.hei.iti.sitewebwhei.filters.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthentificationFiltre</filter-name>
        <filter-class>fr.hei.iti.sitewebwhei.filters.AuthentificationFiltre</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthentificationFiltre</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AjouterContactServlet</servlet-name>
        <servlet-class>fr.hei.iti.sitewebwhei.servlets.AjouterContactServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size> <!-- 10 Mo -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjouterContactServlet</servlet-name>
        <url-pattern>/admin/AjouterContact</url-pattern>
    </servlet-mapping>

</web-app>